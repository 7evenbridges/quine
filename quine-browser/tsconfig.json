{
  /*  The configuration of the typescript compiler
  */
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "./target/scala-2.12/scalajs-bundler/main/node_modules",
    "typeRoots": [
      "./target/scala-2.12/scalajs-bundler/main/node_modules/@types"
    ]
  },
  "exclude": [
    "./target/scala-2.12/scalajs-bundler/main/node_modules",
    "./target/scala-2.12/scalajs-bundler/main/node_modules/@types"
  ]
}
